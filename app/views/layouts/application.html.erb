<!DOCTYPE html>
<html>
  <head>
    <title>MindReport</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <!-- Контроллер можно держать на body, это ок -->
  <body class="bg-gray-100"
        data-controller="modal"
        data-action="keydown@window->modal#esc">
    <nav class="bg-white/80 backdrop-blur border-b border-slate-200">
      <div class="max-w-5xl mx-auto h-14 px-4 flex items-center justify-between">
        <%= link_to "MindReport", root_path, class: "font-semibold text-slate-900" %>
        <div class="flex items-center gap-4 text-sm">
          <% if user_signed_in? %>
            <span class="text-slate-600"><%= current_user.email %></span>
            <%= button_to "Выйти",
              destroy_user_session_path,
              method: :delete,
              class: "btn btn-ghost" %>
          <% else %>
            <%= link_to "Войти", new_user_session_path, class: "btn btn-ghost" %>
            <%= link_to "Регистрация", new_user_registration_path, class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </nav>

    <div id="toast-root" class="fixed top-4 right-4 z-50 space-y-2 w-[92vw] max-w-md"></div>
    <%= render "shared/toasts" %>

    <main class="max-w-5xl mx-auto p-4">
      <%= yield %>
    </main>

    <!-- Глобальная модалка (история) — держим под конец body -->
    <div id="history-modal-root" data-turbo-permanent>
      <!-- Бэкдроп -->
      <div id="history-backdrop"
          data-modal-target="backdrop"
          data-action="click->modal#backdropClick"
          class="hidden fixed inset-0 z-[9998] bg-black/40 p-4 flex items-center justify-center
                  opacity-0 scale-95"></div>

      <!-- Панель -->
      <div id="history-panel" data-modal-target="panel"
          class="hidden fixed inset-0 z-[9999] p-4 items-center justify-center
                  opacity-0 scale-95 transition duration-150 ease-out">

        <div class="pointer-events-auto bg-white rounded-xl shadow-2xl w-full max-w-2xl h-[90vh]">

          <!-- Шапка -->
          <div class="p-4 border-b border-slate-200 justify-between items-center w-full" style="height: 50px;">
            <h3 class="text-sm font-semibold text-slate-800" style="width: 95%;float: left;">История запросов</h3>
            <button class="p-2 rounded-md hover:bg-slate-100" style="float: right;"
                    data-action="click->modal#close"
                    aria-label="Закрыть">✕</button>
          </div>

          <!-- Список со скроллом -->
          <div class="overflow-y-auto p-4 w-full border-b border-slate-200" style="max-height: 350px;overflow: auto;">
            <div id="history_list">
              <%= render "dashboard/history_list", analyses: @history_analyses %>
            </div> 
          </div>

          <!-- Подвал -->
          <div class="p-4">
            <%= button_to "Очистить историю",
                  clear_history_analyses_path,
                  method: :delete,
                  form: { data: { turbo_stream: true } },
                  class: "text-sm px-3 py-2 rounded-md border border-rose-300 text-rose-700 hover:bg-rose-50" %> 
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
