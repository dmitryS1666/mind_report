<% analyses ||= [] %>

<% if analyses.blank? %>
  <p class="text-sm text-slate-500">История пуста.</p>
<% else %>
  <ul class="space-y-2">
    <% analyses.each do |a| %>
      <li class="flex items-start justify-between gap-2">
        <div class="min-w-0">
          <%= link_to analysis_path(a),
                      class: "text-slate-900 hover:underline text-sm truncate block" do %>
            Анализ #<%= a.id %> — <%= a.status %>
          <% end %>
          <div class="text-xs text-slate-500">
            <%= l(a.created_at, format: :short) %>
          </div>
        </div>

        <%= link_to "Открыть",
                    analysis_path(a),
                    class: "shrink-0 text-xs px-2 py-1 rounded-md border border-slate-300 hover:bg-slate-50" %>
      </li>
    <% end %>
  </ul>
<% end %>
