<%= turbo_stream.prepend "analysis_panels",
      partial: "analyses/panel",
      locals: { analysis: @analysis } %>

<%= turbo_stream.append "analysis_stream_target",
      partial: "analyses/stream_message",
      locals: { analysis: @analysis, message: "Готовлюсь к анализу…", kind: :info } %>

<%= turbo_stream.update "history_list",
      partial: "dashboard/history_list",
      locals: { analyses: current_user.analyses.order(created_at: :desc).limit(50) } %>
