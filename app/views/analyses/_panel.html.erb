<div id="<%= dom_id(analysis, :panel) %>" class="bg-white border border-gray-200 rounded-xl shadow-sm p-6">
  <div class="p-4 flex items-center justify-between">
    <h2 class="text-lg font-semibold">Анализ #<%= analysis.id %></h2>
    <%= render "analyses/status", analysis: analysis %>
  </div>

  <% if analysis.ready? %>
    <div class="p-4 mt-4 space-y-4">
      <% if analysis.transcript.present? %>
        <div class="p-4 text-sm text-gray-500">Транскрипция:</div>
        <pre class="bg-gray-50 border border-gray-200 rounded p-3 text-sm whitespace-pre-wrap max-h-[40vh] overflow-auto"><%= analysis.transcript %></pre>
      <% end %>

      <% if analysis.report_text.present? %>
        <div class="p-4 text-sm text-gray-500">Краткий отчёт:</div>
        <div class="prose prose-sm max-w-none">
          <pre class="bg-gray-50 border border-gray-200 rounded p-3 text-sm whitespace-pre-wrap max-h-[60vh] overflow-auto" data-controller="typewriter"><%= analysis.report_text %></pre>
        </div>
      <% end %>
    </div>
  <% elsif analysis.failed? %>
    <div class="mt-4 text-rose-700">
      Произошла ошибка: <%= analysis.error_message %>
    </div>
  <% else %>
    <div class="p-4 mt-4 text-sm text-gray-700 flex items-center gap-2">
      <span class="inline-flex h-2 w-2 rounded-full bg-gray-400 animate-pulse"></span>
      <span class="animate-pulse">Готовлюсь к анализу…</span>
    </div>
  <% end %>
</div>
