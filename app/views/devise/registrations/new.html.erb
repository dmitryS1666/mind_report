<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <div class="w-full max-w-md bg-white shadow-md rounded-xl p-8 border border-gray-200">
    <h2 class="text-2xl font-bold text-center mb-2">Регистрация</h2>

    <%= render "shared/form_toast_errors", resource: resource %>

    <p class="text-sm text-gray-600 text-center mb-6">
      Создайте аккаунт, чтобы загружать аудио и получать отчёты.
    </p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-5" }) do |f| %>
      <!-- Email -->
      <div>
        <label for="user_email" class="block text-sm font-medium text-gray-700 mb-1">
          Email
        </label>
        <%= f.email_field :email,
              autofocus: true, autocomplete: "email", required: true,
              class: "w-full rounded-lg border border-gray-300 px-3 py-2 text-sm shadow-sm focus:border-gray-500 focus:ring-2 focus:ring-gray-200" %>
      </div>

      <!-- Пароль -->
      <div>
        <label for="user_password" class="block text-sm font-medium text-gray-700 mb-1">
          Пароль
        </label>
        <%= f.password_field :password,
              autocomplete: "new-password", required: true,
              class: "w-full rounded-lg border border-gray-300 px-3 py-2 text-sm shadow-sm focus:border-gray-500 focus:ring-2 focus:ring-gray-200" %>
        <% if @minimum_password_length %>
          <p class="text-xs text-gray-500 mt-1">Минимум <%= @minimum_password_length %> символов</p>
        <% end %>
      </div>

      <!-- Подтверждение пароля -->
      <div>
        <label for="user_password_confirmation" class="block text-sm font-medium text-gray-700 mb-1">
          Подтверждение пароля
        </label>
        <%= f.password_field :password_confirmation,
              autocomplete: "new-password", required: true,
              class: "w-full rounded-lg border border-gray-300 px-3 py-2 text-sm shadow-sm focus:border-gray-500 focus:ring-2 focus:ring-gray-200" %>
      </div>

      <!-- Кнопка -->
      <%= f.submit "Зарегистрироваться",
            class: "w-full bg-gray-900 text-white rounded-lg px-4 py-2 font-medium hover:bg-gray-800 transition" %>

      <!-- Ссылка на вход -->
      <div class="text-center text-sm text-gray-600">
        <%= link_to "У меня уже есть аккаунт", new_session_path(resource_name), class: "text-gray-900 hover:underline" %>
      </div>
    <% end %>
  </div>
</div>
