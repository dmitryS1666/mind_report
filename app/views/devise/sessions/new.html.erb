<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <div class="w-full max-w-md bg-white shadow-md rounded-xl p-8 border border-gray-200">
    <h2 class="text-2xl font-bold text-center mb-2">Вход</h2>
    
    <%= render "shared/form_toast_errors", resource: resource %>

    <p class="text-sm text-gray-600 text-center mb-6">
      Добро пожаловать 👋 <br>в <b>MindReport</b>
    </p>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-5" }) do |f| %>
      <!-- Email -->
      <div>
        <label for="user_email" class="block text-sm font-medium text-gray-700 mb-1">
          Email
        </label>
        <%= f.email_field :email,
              autofocus: true, autocomplete: "email", required: true,
              class: "w-full rounded-lg border border-gray-300 px-3 py-2 text-sm shadow-sm focus:border-gray-500 focus:ring-2 focus:ring-gray-200" %>
      </div>

      <!-- Пароль -->
      <div>
        <label for="user_password" class="block text-sm font-medium text-gray-700 mb-1">
          Пароль
        </label>
        <%= f.password_field :password,
              autocomplete: "current-password", required: true,
              class: "w-full rounded-lg border border-gray-300 px-3 py-2 text-sm shadow-sm focus:border-gray-500 focus:ring-2 focus:ring-gray-200" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center gap-2 text-sm">
          <%= f.check_box :remember_me, class: "rounded border-gray-300 text-gray-900 focus:ring-gray-300" %>
          <%= f.label :remember_me, "Запомнить меня", class: "text-gray-700" %>
        </div>
      <% end %>

      <!-- Кнопка -->
      <%= f.submit "Войти",
            class: "w-full bg-gray-900 text-white rounded-lg px-4 py-2 font-medium hover:bg-gray-800 transition" %>

      <!-- Ссылки -->
      <div class="text-center text-sm text-gray-600">
        <%= link_to "Забыли пароль?", new_password_path(resource_name), class: "text-gray-900 hover:underline" %>
      </div>
    <% end %>
  </div>
</div>
